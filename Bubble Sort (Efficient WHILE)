DECLARE COUNT, COUNTER, temp : INTEGER
DECLARE swap: BOOLEAN
DECLARE arrayData : ARRAY [1:10] OF INTEGER
arrayData = [10,4,5,6,7,8,3,2,1,99]

#Ascending Order
swap = FALSE
WHILE swap = FALSE DO
  swap = TRUE
  FOR COUNTER = 1 TO 9
    IF arrayData[COUNTER] > arrayData[COUNTER+1]
    THEN temp =  arrayData[COUNTER+1]
         arrayData[COUNTER+1] = arrayData[COUNTER]
         arrayData[COUNTER] = temp
         swap = FALSE
    ENDIF
  NEXT
ENDWHILE

#Descending Order
swap = FALSE
WHILE swap = FALSE DO
  swap = TRUE
  FOR COUNTER = 1 TO 9
    IF arrayData[COUNTER] < arrayData[COUNTER+1]
    THEN temp =  arrayData[COUNTER+1]
         arrayData[COUNTER+1] = arrayData[COUNTER]
         arrayData[COUNTER] = temp
         swap = FALSE
    ENDIF
  NEXT
ENDWHILE
